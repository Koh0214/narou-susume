= form_for @novel do |f|
  - if @novel.errors.any?
    #error_explanation
      %h2= "#{pluralize(@novel.errors.count, "error")} prohibited this novel from being saved:"
      %ul
        - @novel.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_area :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :url
    = f.text_area :url
  .field
    = f.label :like
    = f.number_field :like
  .field
    = f.label :osusume
    = f.number_field :osusume_id
  .field
    = f.label :amazon_image_link
    = f.text_area :amazon_image_link
  .field
    = f.label :amazon_link
    = f.text_area :amazon_link
    .field
      = f.label :amazon_kindle_link
      = f.text_area :amazon_kindle_link
  .actions
    = f.submit 'Save'
