%p#notice= notice

.container.p-0
  .card.mt-1.mb-2.border-0
    -# .card-title
    = link_to @novel.url, target: "_blank"  do
      .h5.font-weight-bold.m-2
        #{@novel.title}
        .fa.fa-external-link
  .card.text-muted.mt-1.mb-2.p-2.border-0
    #{@novel.description}

  - @comments.each do |comment|
    name #{comment.name}
    %br
    comment #{comment.comment}
    %hr
  -# #novel-cards
  -#   - @novels.each do |novel|
  -#     = render partial: "novel-card", locals: { novel: novel }
  .row
    .mx-auto.mt-4
      = form_for @comment do |f|
        .form-group
          = f.label :名前, class: "mb-1"
          = f.text_field :name, placeholder:"名前", id: "comment-name", required: "required", class: 'form-control'
        .form-group
          = f.label :コメント, class: "mb-1"
          = f.text_area :comment, :placeholder=>'コメント', id: "comment-comment", class: "d-block under-comment-text", required: "required"
        = f.hidden_field :novel_id, :value => @novel.id
        .m-3
          = f.submit "コメントする", class: "btn btn-primary px-5 mx-auto d-block", data: { disable_with: "コメントする"}

  .row.m-3
    / 切り替えボタンの設定
    %button.btn.btn-primary.btn-add-novel{"data-target" => "#myModal", "data-toggle" => "modal", :type => "button"}
      = fa_icon 'pencil'
      コメントする
    = render partial: "add-comment-modal", locals: { comment: @comment }

%p
  %b Title:
  = @novel.title
%p
  %b Description:
  = @novel.description
%p
  %b Url:
  = @novel.url
%p
  %b Like:
  = @novel.like
%p
  %b Osusume:
  = @novel.osusume

= link_to 'Edit', edit_novel_path(@novel)
\|
= link_to 'Back', novels_path
