.card.mt-1.mb-2.border-0
  = link_to novel_path(novel) do
    .card-title.h6.p-2.m-0
      #{novel.title}
  .card-footer
    .btn.btn-outline-secondary.description.p-1
      ▽あらすじ
    -# .card
    -#   #{novel.description}
    .fa.fa-comments-o
      %span{style: "font-size: 18px"}
        #{novel.comments.count}
    .fa.fa-heart-o.novel-card-like
      %span{style: "font-size: 18px"}
      - if novel.like != nil
        #{novel.like}
      - else
        0
    .novel-id
      #{novel.id}
